@model UpdateMarketDto

<h1>Update New Market</h1>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Market Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="UpdateMarket" method="post">
                <div class="mb-3">
                    <label for="MarketName" class="form-label">Market Name:</label>
                    <input type="text" id="MarketName" class="form-control" asp-for="MarketName" />
                    <span asp-validation-for="MarketName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Market Description:</label>
                    <input type="text" id="Description" class="form-control" asp-for="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label">Address:</label>
                    <input type="text" id="Address" class="form-control" asp-for="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
